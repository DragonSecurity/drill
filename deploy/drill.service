[Unit]
Description=drill reverse tunnel server
Wants=network-online.target
After=network-online.target

[Service]
Type=simple
User=drill
Group=drill
EnvironmentFile=-/etc/drill/drill.env
ExecStart=/usr/local/bin/drill server --config /etc/drill/server.yaml
WorkingDirectory=/var/lib/drill
Restart=on-failure
RestartSec=2s
LimitNOFILE=65536
AmbientCapabilities=CAP_NET_BIND_SERVICE
CapabilityBoundingSet=CAP_NET_BIND_SERVICE
NoNewPrivileges=true

[Install]
WantedBy=multi-user.target
